{
  "name": "icjia-accessibility-status",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "."
  ],
  "scripts": {
    "dev": "concurrently \"vite\" \"nodemon\"",
    "dev:frontend": "vite",
    "dev:backend": "nodemon",
    "build": "vite build",
    "build:frontend": "vite build",
    "build:backend": "echo 'Backend uses tsx runtime - no build needed'",
    "production:simple": "concurrently \"vite preview --host 0.0.0.0 --port 5173\" \"tsx server/index.ts\"",
    "start": "pm2 start ecosystem.config.cjs",
    "stop": "pm2 stop ecosystem.config.cjs",
    "restart": "pm2 restart ecosystem.config.cjs",
    "logs": "pm2 logs icjia-accessibility-backend",
    "status": "pm2 status",
    "staging": "concurrently \"vite\" \"nodemon --watch server server/index.ts\"",
    "lint": "eslint .",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit -p tsconfig.app.json",
    "seed": "tsx seed.ts",
    "reset:users": "node scripts/reset-users.js",
    "reset:app": "node scripts/reset-app.js",
    "production:pm2": "yarn install && yarn build && pm2 restart ecosystem.config.cjs || pm2 start ecosystem.config.cjs && pm2 save"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@supabase/supabase-js": "^2.57.4",
    "axe-core": "4.8.0",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "lighthouse": "11.4.0",
    "lucide-react": "^0.344.0",
    "multer": "^2.0.2",
    "papaparse": "^5.5.3",
    "pg": "^8.16.3",
    "playwright": "^1.56.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-is": "^19.2.0",
    "react-router-dom": "^7.9.5",
    "recharts": "^3.3.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/multer": "^2.0.0",
    "@types/papaparse": "^5.5.0",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^9.2.1",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.20.6",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  }
}
